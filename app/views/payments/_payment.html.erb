<tr id="payment-<%= payment.id %>">
    <td><%= payment.reservation_id %></td>
    <td><%= payment.state %></td>
    <td><%= payment.total %></td>
    <td><%= link_to 'Show', payment, remote: true %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment), remote: true %></td>
    <td><%= link_to 'Destroy', payment, data: { remote: true, confirm: "Are you sure?" }, method: :delete %></td>
</tr>