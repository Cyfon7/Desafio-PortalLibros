<tr id="reservation-<%= reservation.id %>">
    <td><%= reservation.book.title %></td>
    <td><%= reservation.book.author %></td>
    <td><%= reservation.book.sku %></td>
    <!--<td><%= reservation.quantity %></td>-->
    <td><%= reservation.price %></td>
    <td><%= link_to 'Show', reservation.book, remote: true %></td>
    <td><%= link_to 'Buy', process_payment_path(id: reservation.id), data: {toggle: "modal", target: "#modalPayment"}, remote: true %></td>
    <td><%= link_to 'Remove', remove_reservation_path(id: reservation.id), remote: true, method: :delete %></td>
</tr>