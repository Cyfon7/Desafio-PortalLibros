<tr id="book-<%= book.id %>">
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.sku %></td>
    <td><%= book.stock %></td>
    <td><%= book.price %></td>
    <td><%= link_to 'Show', book, remote: true %></td>
    <% if user_signed_in? && current_user.admin %>
        <td><%= link_to 'Edit', edit_book_path(book), remote: true %></td>
        <td><%= link_to 'Destroy', book, data: { remote: true, confirm: "Are you sure?" }, method: :delete %></td>
    <% end %>
</tr>